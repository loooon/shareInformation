<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zyx.mapper.MsgPushUserWxRelationshipMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.zyx.model.MsgPushUserWxRelationship">
        <result column="user_id" property="userId" />
        <result column="openId" property="openId" />
        <result column="msg_push_user_nick" property="msgPushUserNick" />
        <result column="msg_push_head_url" property="msgPushHeadUrl" />
        <result column="create_time" property="createTime" />
        <result column="update_time" property="updateTime" />
    </resultMap>
	<sql id="Base_Column_List">
	user_id,openId,msg_push_user_nick,msg_push_head_url,create_time,update_time
	</sql>
	
	<!-- 根据用户openId查询用户Id -->
	<select id="seleUserByOpenId" parameterType="String" resultType="com.zyx.model.MsgPushUserWxRelationship">
		select
			<include refid="Base_Column_List"/>
		from
			msg_push_user_wx_relationship
		where
			openId=#{openId,jdbcType=VARCHAR}
	</select>

</mapper>
